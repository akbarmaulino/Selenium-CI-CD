pipeline {
    agent any

    stages {
        stage('Build Stage') {
            steps {
                dir('.') {
                    echo 'Compiling HelloWord.java...'
                    bat 'javac HelloWord.java'
                }
            }
        }

        stage('Test Stage') {
            steps {
                echo 'Cloning or pulling Selenium-AfterOffice...'
                bat '''
                if exist Selenium-AfterOffice (
                    cd Selenium-AfterOffice && git fetch origin && git reset --hard origin/main
                ) else (
                    git clone -b main https://github.com/akbarmaulino/Selenium-AfterOffice
                )
                '''

                dir('Selenium-AfterOffice') {
                    echo 'Installing dependencies with Maven (skip test)...'
                    bat 'mvn install -DskipTests'

                    echo 'Running tests using TestNG...'
                    bat 'mvn test -Dsurefire.suiteXmlFiles=src/test/resources/pageFactory/runner_cucumber.xml'
                }
            }
        }

        stage('Deployment Stage') {
            steps {
                dir('.') {
                    echo 'Running HelloWord.java...'
                    bat 'java HelloWord'
                }
            }
        }
    }
}
