pipeline {
    agent any

    environment {
        REPO_TEST = 'https://github.com/akbarmaulino/Selenium-AfterOffice'
        FOLDER_TEST = 'Selenium-AfterOffice'
    }

    stages {
        stage('Build') {
            steps {
                script {
                    echo "📁 Listing current directory:"
                    bat 'dir'

                    echo "🛠️ Compiling HelloWord.java"
                    bat 'javac HelloWord.java'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    if (fileExists(FOLDER_TEST)) {
                        echo "📂 Folder ${FOLDER_TEST} exists. Pulling latest changes..."
                        dir(FOLDER_TEST) {
                            bat 'git checkout main'
                            bat 'git pull origin main'
                        }
                    } else {
                        echo "⬇️ Cloning test repo from ${REPO_TEST}..."
                        bat "git clone ${REPO_TEST}"
                        dir(FOLDER_TEST) {
                            bat 'git checkout main'
                        }
                    }

                    dir(FOLDER_TEST) {
                        echo "📁 Checking contents of ${FOLDER_TEST}"
                        bat 'dir'

                        echo "⚙️ Running mvn install -DskipTests"
                        bat 'mvn install -DskipTests'

                        echo "🧪 Running mvn test (default env)"
                        bat 'mvn test -Dsurefire.suiteXmlFiles=src/test/resources/pageFactory/runner_cucumber.xml'

                        echo "🧪 Running mvn test (production env)"
                        bat 'mvn test -Dsurefire.suiteXmlFiles=src/test/resources/pageFactory/runner_cucumber.xml -Denv=production'
                    }
                }
            }
        }

        stage('Deployment') {
            steps {
                script {
                    echo "🚀 Running HelloWord class"
                    bat 'java HelloWord'
                }
            }
        }
    }
}
