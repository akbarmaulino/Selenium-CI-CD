pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                script {
                    // Step 1.1 & 1.2
                    def repo1 = 'Selenium-CI-CD'
                    if (fileExists(repo1)) {
                        echo "Folder ${repo1} already exists. Pulling latest changes..."
                        dir(repo1) {
                            bat 'git pull'
                        }
                    } else {
                        echo "Cloning ${repo1}..."
                        bat "git clone https://github.com/akbarmaulino/Selenium-CI-CD"
                    }

                    // Step 1.3
                    dir(repo1) {
                        echo "Compiling HelloWord.java"
                        bat 'javac HelloWord.java'
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // Step 2.1 & 2.2
                    def repo2 = 'Selenium-AfterOffice'
                    if (fileExists(repo2)) {
                        echo "Folder ${repo2} already exists. Pulling latest changes..."
                        dir(repo2) {
                            bat 'git pull'
                        }
                    } else {
                        echo "Cloning ${repo2}..."
                        bat "git clone https://github.com/akbarmaulino/Selenium-AfterOffice"
                    }

                    // Step 2.3 & 2.4
                    dir(repo2) {
                        bat 'mvn install -DskipTests'
                        bat 'mvn test "-Dtestng.xml=src/test/resources/pageFactory/runner_cucumber.xml" -Denv=production'
                    }
                }
            }
        }

        stage('Deployment') {
            steps {
                script {
                    def deployDir = "Selenium-CI-CD\\deployment"
                    if (fileExists(deployDir)) {
                        dir(deployDir) {
                            echo "Running HelloWord class..."
                            bat 'java HelloWord'
                        }
                    } else {
                        error "Deployment folder not found: ${deployDir}"
                    }
                }
            }
        }
    }
}
