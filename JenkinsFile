pipeline {
    agent any

    environment {
        REPO_BUILD = 'https://github.com/akbarmaulino/Selenium-CI-CD'
        REPO_TEST = 'https://github.com/akbarmaulino/Selenium-AfterOffice'
        FOLDER_BUILD = 'Selenium-CI-CD'
        FOLDER_TEST = 'Selenium-AfterOffice'
    }

    stages {
        stage('Build') {
            steps {
                script {
                    if (fileExists(FOLDER_BUILD)) {
                        echo "Folder ${FOLDER_BUILD} exists. Pulling latest changes..."
                        dir(FOLDER_BUILD) {
                            bat 'git pull origin main'
                        }
                    } else {
                        echo "Cloning ${REPO_BUILD}..."
                        bat "git clone ${REPO_BUILD}"
                        dir(FOLDER_BUILD) {
                            bat 'git checkout main'
                        }
                    }
                }
                dir(FOLDER_BUILD) {
                    bat 'dir' // debug lihat isi folder
                    echo "Compiling HelloWord.java"
                    bat 'javac HelloWord.java'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    if (fileExists(FOLDER_TEST)) {
                        echo "Folder ${FOLDER_TEST} exists. Pulling latest changes..."
                        dir(FOLDER_TEST) {
                            bat 'git pull origin main'
                        }
                    } else {
                        echo "Cloning ${REPO_TEST}..."
                        bat "git clone ${REPO_TEST}"
                        dir(FOLDER_TEST) {
                            bat 'git checkout main'
                        }
                    }
                }
                dir(FOLDER_TEST) {
                    bat 'dir' // debug lihat isi folder
                    echo "Running mvn install -DskipTests"
                    bat 'mvn install -DskipTests'

                    echo "Running mvn test (default)"
                    bat 'mvn test -Dtestng.xml=src/test/resources/pageFactory/runner_cucumber.xml'

                    echo "Running mvn test (production)"
                    bat 'mvn test -Dtestng.xml=src/test/resources/pageFactory/runner_cucumber.xml -Denv=production'
                }
            }
        }

        stage('Deployment') {
            steps {
                dir(FOLDER_BUILD) {
                    echo "Running HelloWord class"
                    bat 'java HelloWord'
                }
            }
        }
    }
}
